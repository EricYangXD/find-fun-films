@import "movie-list/movie-list-template.wxss";
@import "movie-grid/movie-grid-template.wxss";

.container {
  background-color: #f2f2f2;
}

.search {
  display: flex;
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  flex-direction: row;
}

.search-img {
  flex: 0 0 40rpx;
  margin: auto 0 auto 10rpx;
  padding: 0 15rpx;
}

.search input {
  flex: 1;
  height: 100%;
  margin: auto 0;
  font-size: 28rpx;
}

.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.movies-template {
  margin-bottom: 30rpx;
}

.search-panel {
  position: absolute;
  top: 80rpx;
  width: 100%;
}

.xx-img {
  flex: 0 0 20rpx;
  height: 20rpx;
  width: 20rpx;
  margin: auto 10rpx;
  padding: 0 30rpx;
}
